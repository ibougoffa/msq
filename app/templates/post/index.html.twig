{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}
{% block page %}<h1>Les publications</h1>{% endblock %}

{% block body %}
<div class="section-body">
    <h2 class="section-title">Articles</h2>
    <p class="section-lead">This article component is based on card and flexbox.</p>
    <div class="row">

        {% for post in posts %}

                <div class="col-12 col-sm-6 col-md-6 col-lg-3">
                    <article class="article">
                        <div class="article-header">
                            <div class="article-image" data-background="../assets/img/news/img08.jpg">
                            </div>
                            <div class="article-title">
                                <h2><a href="{{ path('post_show', {'id': post.id}) }}">{{post.title}}</a></h2>
                            </div>
                        </div>
                        <div class="article-details">
                            <p>{{post.content}} </p>
                            <div class="article-cta">
                                <a href="{{ path('post_show', {'id': post.id}) }}" class="btn btn-primary">Read More</a>
                            </div>
                        </div>
                    </article>
                </div>
        {% else %}
            <div class="mx-auto">
                no records found
            </div>
        {% endfor %}
                </div>
    </div>
    <a href="{{ path('post_new') }}">Create new</a>
{% endblock %}
