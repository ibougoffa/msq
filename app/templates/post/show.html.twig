{% extends 'base-front.html.twig' %}

{% block title %}Post{% endblock %}

{% block content %}
    <div class="row col-12">
        <div class="card col-8">
            <div class="card-body">
                <h1>{{ post.title }}</h1>
                <h6> Publié le : {{ post.created ? post.created|date('d/m/YYYY H:i') : '' }}</h6>
                <div class="row">
                    <div class="article-image" data-background="../assets/img/news/img08.jpg">
                        {{ post.category }}
                    </div>
                </div>
                <div class="row">
                    {{ post.content }}
                </div>

                <a href="{{ path('post_index') }}">back to list</a>

                <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>

                {{ include('post/_delete_form.html.twig') }}
            </div>
        </div>
        <div class="col-1">
        </div>
        <div class="card col-3">
            <div class="card-header">
                <h4 class="mx-auto">Dernières publications</h4>
            </div>
            <div class="card-body">
                ...
            </div>
        </div>
    </div>
{% endblock %}
